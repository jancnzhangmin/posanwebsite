
<script>
    $(document).ready(function(){

        $("#claselect").change(function(){
            $("#clainput").val($("#claselect").val());
        });
        $("#smt").click(function(){
            if($("#clainput").val()=="" || $("#clainput").val()=="0"){
                alert("请选择分类");
                return false
            }
        });

    });
</script>


<div class="col-md-12 ibox ibox-content">
  <div class="ibox-content form-horizontal m-t">
    <div class="form-group">
      <%= form_for(@product,:html => {:class=>'form-horizontal m-t',:multipart => true}) do |f| %>

          <div class="form-group">
            <label class="col-sm-3 control-label">商品名：</label>
            <div class="col-sm-5">
              <%= f.text_field :ware,class:"form-control" %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label">分类：</label>
            <div class="col-sm-5">
              <%= f.text_field :mycla_id,class:"form-control",id:'clainput' %>
              <select id="claselect">
                <option value="0">请选择分类</option>
                <% @myclas.each do |cla| %>
                    <option value=<%= cla.id %>> <%= cla.cla %> </option>
                <% end %>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label"></label>
            <div class="col-sm-5 text-right">
              <%= f.submit '确定',class: "btn btn-w-m btn-primary ",id:'smt' %>&nbsp;<%= link_to "返回",products_path,class: "btn btn-w-m btn-primary " %>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
